                        <Insets top="30.0" />
                     </VBox.margin>
                  </CheckComboBox>
                  <VBox prefHeight="50.0" prefWidth="80.0">
                     <children>
                        <Label text="Select Image">
                           <VBox.margin>
                              <Insets left="45.0" />
                           </VBox.margin>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#getEventImage" prefHeight="26.0" prefWidth="60.0" stylesheets="@styles/popupStyle.css" text="open">
