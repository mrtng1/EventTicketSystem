<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.CheckComboBox?>

<AnchorPane fx:id="createEventAnchorPane" prefHeight="300.0" prefWidth="500.0" stylesheets="@styles/popupStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ets.gui.controller.CreateEventWindowController">
   <children>
      <Pane layoutX="230.0" prefHeight="300.0" prefWidth="270.0" style="-fx-background-color: white; -fx-background-radius: 20 0 0 20;">
         <children>
            <VBox layoutX="60.0" prefHeight="245.0" prefWidth="150.0">
               <children>
                  <TextField fx:id="nameField" alignment="TOP_LEFT" promptText="Event name" style="-fx-background-radius: 20;">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="locationField" promptText="Location" style="-fx-background-radius: 20;">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </TextField>
                  <DatePicker fx:id="dateField" nodeOrientation="LEFT_TO_RIGHT" promptText="Date" showWeekNumbers="true">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </DatePicker>
                  <CheckComboBox prefWidth="150.0">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </CheckComboBox>
               </children>
               <padding>
                  <Insets bottom="30.0" />
               </padding>
            </VBox>
            <Button layoutX="64.0" layoutY="255.0" mnemonicParsing="false" onAction="#createBtn" stylesheets="@styles/popupStyle.css" text="CREATE" textFill="#686868" />
            <Button layoutX="138.0" layoutY="255.0" mnemonicParsing="false" onAction="#cancelBtn" stylesheets="@styles/popupStyle.css" text="CANCEL" textFill="#686868" />
         </children>
         <effect>
            <DropShadow />
         </effect>
      </Pane>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="35.0" layoutY="75.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/easvImg.png" />
         </image>
         <effect>
            <DropShadow />
         </effect>
      </ImageView>
   </children>
</AnchorPane>
