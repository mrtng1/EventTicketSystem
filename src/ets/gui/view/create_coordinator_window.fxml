                        <Insets top="30.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="passwordField" editable="false" promptText="password" style="-fx-background-radius: 20;">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
            <Button layoutX="95.0" layoutY="345.0" mnemonicParsing="false" onAction="#createBtn" stylesheets="@styles/popupStyle.css" text="CREATE" textFill="#686868" />
