                              <Insets left="50.0" top="5.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="30.0" />
               </padding>
            </VBox>
            <Button layoutX="89.0" layoutY="407.0" mnemonicParsing="false" onAction="#createBtn" stylesheets="@styles/popupStyle.css" text="CREATE" textFill="#686868" />
            <Button layoutX="163.0" layoutY="407.0" mnemonicParsing="false" onAction="#cancelBtn" stylesheets="@styles/popupStyle.css" text="CANCEL" textFill="#686868" />
         </children>
         <effect>
            <DropShadow />
         </effect>
      </Pane>
      <Pane layoutX="399.0" layoutY="156.0" prefHeight="140.0" prefWidth="140.0" style="-fx-background-color: linear-gradient(to left top, #281714, #59221b, #8d2922, #c52e28, #ff2e2e); -fx-background-radius: 80;">
         <children>
            <ImageView fitHeight="100.0" fitWidth="70.0" layoutX="35.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/icons/event_icon.png" />
               </image>
               <effect>
                  <DropShadow />
               </effect>
            </ImageView>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </Pane>
