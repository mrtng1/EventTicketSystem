<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.CheckComboBox?>

<AnchorPane fx:id="createEventAnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #484c4e;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ets.gui.controller.CreateEventWindowController">
   <children>
      <Pane prefHeight="400.0" prefWidth="330.0" style="-fx-background-color: white; -fx-background-radius: 0 20 20 0;">
         <children>
            <VBox layoutX="90.0" layoutY="41.0" prefHeight="245.0" prefWidth="150.0">
               <children>
                  <TextField fx:id="nameField" alignment="TOP_LEFT" promptText="Event name" style="-fx-background-radius: 20;">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="locationField" promptText="Location" style="-fx-background-radius: 20;">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </TextField>
                  <DatePicker fx:id="dateField" nodeOrientation="LEFT_TO_RIGHT" promptText="Date" showWeekNumbers="true">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </DatePicker>
                  <CheckComboBox fx:id="selectCoordinators" prefWidth="150.0">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </CheckComboBox>
               </children>
               <padding>
                  <Insets bottom="30.0" />
               </padding>
            </VBox>
            <Button layoutX="95.0" layoutY="340.0" mnemonicParsing="false" onAction="#createBtn" stylesheets="@styles/popupStyle.css" text="CREATE" textFill="#686868" />
            <Button layoutX="169.0" layoutY="340.0" mnemonicParsing="false" onAction="#cancelBtn" stylesheets="@styles/popupStyle.css" text="CANCEL" textFill="#686868" />
         </children>
         <effect>
            <DropShadow />
         </effect>
      </Pane>
      <Pane layoutX="396.0" layoutY="130.0" prefHeight="140.0" prefWidth="140.0" style="-fx-background-color: linear-gradient(to left top, #281714, #59221b, #8d2922, #c52e28, #ff2e2e); -fx-background-radius: 80;">
         <children>
            <ImageView fitHeight="100.0" fitWidth="70.0" layoutX="35.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/icons/event_icon.png" />
               </image>
               <effect>
                  <DropShadow />
               </effect>
            </ImageView>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </Pane>
   </children>
</AnchorPane>
