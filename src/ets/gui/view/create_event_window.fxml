<AnchorPane fx:id="createEventAnchorPane" prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #484c4e;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ets.gui.controller.create.CreateEventWindowController">
